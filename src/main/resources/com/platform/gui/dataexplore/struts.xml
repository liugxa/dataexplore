<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="dataexplore" namespace="/dataexplore" extends="json-default">
		
		<!-- DataExploreAction: -->
		<action name="doGetDataExploreContext" class="com.platform.gui.dataexplore.action.DataExploreAction" method="doGetDataExploreContext">
			<result type="json" name="success">
				<param name="root">context</param>
			</result>
		</action>
		<action name="doSaveDataExploreContext" class="com.platform.gui.dataexplore.action.DataExploreAction" method="doSaveDataExploreContext"/>
		
		
		<!-- HostAction: -->
		<action name="doGetHostRoot" class="com.platform.gui.dataexplore.action.HostTreeAction" method="doGetHostRoot">
			<result type="json" name="success">
				<param name="root">fileItem</param>
			</result>
		</action>
		
		<action name="doGetHostFiles" class="com.platform.gui.dataexplore.action.HostTreeAction" method="doGetHostFiles">
			<result type="json" name="success">
				<param name="root">fileItems</param>
			</result>
		</action>
		
		
		<!-- FavoriteAction: -->
		<action name="doGetFavoriteRoot" class="com.platform.gui.dataexplore.action.FavoriteTreeAction" method="doGetFavoriteRoot">
			<result type="json" name="success">
				<param name="root">fileItem</param>
			</result>
		</action>
		
		<action name="doGetFavorites" class="com.platform.gui.dataexplore.action.FavoriteTreeAction" method="doGetFavorites">
			<result type="json" name="success">
				<param name="root">fileItems</param>
			</result>
		</action>
		<action name="doAddFavorite" class="com.platform.gui.dataexplore.action.FavoriteTreeAction" method="doAddFavorite"/>
		<action name="doRemoveFavorite" class="com.platform.gui.dataexplore.action.FavoriteTreeAction" method="doRemoveFavorite"/>
		
		
		<!-- InputFilesAction: input file actions -->
		<action name="doGetInputFile" class="com.platform.gui.dataexplore.action.InputFilesAction" method="doGetInputFile">
			<result type="json">
				<param name="root">inputFile</param>
			</result>
		</action>
		<action name="doGetInputFiles" class="com.platform.gui.dataexplore.action.InputFilesAction" method="doGetInputFiles">
			<result type="json" name="success">
				<param name="root">inputFiles</param>
			</result>
		</action>
		<action name="doAddInputFile" class="com.platform.gui.dataexplore.action.InputFilesAction" method="doAddInputFile"/>
		<action name="doRemoveInputFile" class="com.platform.gui.dataexplore.action.InputFilesAction" method="doRemoveInputFile"/>
		
		
		<!-- IncludeFilesAction: the include file actions -->
		<action name="toIncludeFiles" class="com.platform.gui.dataexplore.action.IncludeFilesAction" method="toIncludeFiles">
			<result name="success">layouts/include_files.jsp</result>
			<result name="input">layouts/include_files.jsp</result>
		</action>
		
		<action name="doGetIncludeFiles" class="com.platform.gui.dataexplore.action.IncludeFilesAction" method="doGetIncludeFiles">
			<result type="json" name="success">
				<param name="root">includeFiles</param>
			</result>
		</action>
	</package>
</struts>
